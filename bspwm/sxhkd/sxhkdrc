#################################################################
#     MULTIMEDIA KEYS
#################################################################

#Raises volume
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

#Lowers volume
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

#Mute
XF86AudioMute
   pactl set-sink-mute 0 toggle

#Playerctl works for Pragha, Spotify and others
#Delete the line for playerctl if you want to use mpc
#and replace it with the corresponding code
#mpc works for e.g.ncmpcpp
#mpc toggle
#mpc next
#mpc prev
#mpc stop

#PLAY
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

# Brighness control
XF86MonBrightnessDown
	brightnessctl set 5%-
	
# Brighness control
XF86MonBrightnessUp
	brightnessctl set 5%+


#################################################################
# SUPER + ... KEYS
#################################################################

#archlinux-logout
super + x
    archlinux-logout

#powermenu
super + shift + x
    arcolinux-powermenu

# #Rofi theme selector
# super + shift + r
#     rofi-theme-selector

#alacritty
super + Return
    alacritty

# hide window
super + y
	bspc node --flag hidden=on
	# bspc node focused -g hidden=on

# unhide window
super + r
	bspc node $(bspc query -N -d focused -n .hidden.window | head -1) --flag hidden=off
	# ~/github/dotfiles/bspwm/sxhkd/bspwinmask
	# bspc node focused -g hidden=on



#rofi
super + d
    rofi -show drun

#reload sxhkd:
super + Escape
	pkill -USR1 -x sxhkd


#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + e
	thunar


